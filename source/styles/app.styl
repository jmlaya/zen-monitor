body
  margin: 0
  padding: 0 0 (U / 2) 0
  font-family: FONT_FAMILY
  font-size: 100%
  background-color: DARK

  .color
    &.idx0 strong
      color: BLUE
    &.idx1 strong
      color: GREEN
    &.idx2 strong
      color: RED
    &.red
      color: RED
    &.blue
      color: BLUE

header
  position: fixed
  z-index: 1980
  top: 0
  width: 100%
  height: U
  line-height: U
  padding: 0 SPACE
  line-height: U
  color: WHITE
  background-color: rgba(0,0,0,0.1)
  > *
    display: inline-block
    vertical-align: middle
    margin: 0
  > .logo
    color: lighten(DARK, 25%)
    > .color
      color: WHITE
      font-weight: FONT_WEIGHT_BOLD
  > form
    margin-left: SPACE
    text-align: right
    > *
      height: (U / 2)
      padding: 0 SPACE
      border: none
      font-family: inherit
      -webkit-appearance: none
      -webkit-touch-callout: none
      -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
      outline: none

    > input
      background-color: lighten(DARK, 10%)
      color: BACKGROUND
      font-size: FONT_SIZE_TINY
      font-weight: FONT_WEIGHT_THIN
      &:nth-child(1)
        width: (2 * U)
      &:nth-child(2)
        width: (U / 1.25)
      &:nth-child(3)
        width: (1.5 * U)
    > button
      font-size: FONT_SIZE_SMALL
      font-weight: FONT_WEIGHT_BOLD
      background-color: lighten(DARK, 20%)
      color: WHITE
footer
  position: fixed
  z-index: 1980
  bottom: 0px
  left: 0px
  width: 100%
  height: HEIGHT = (U / 2)
  font-weight: FONT_WEIGHT_THIN
  font-size: FONT_SIZE_TINY
  line-height: HEIGHT
  text-align: center
  color: darken(BACKGROUND, 25%)
  background-color: rgba(0,0,0,0.1)


  .color.red
    font-size: FONT_SIZE_NORMAL
  a
    color: WHITE
    text-decoration: none
    &:nth-child(2):hover
      color: GREEN
    &:nth-child(3):hover
      color: BLUE
