@import "../../bower_components/stylmethods/vendor.styl"
@import url("http://fonts.googleapis.com/css?family=Unica+One")

/* ------------------------- COLORS ------------------------- */
THEME                   = #CCC
BACKGROUND              = #F0F0F0
DARK                    = darken(#333, 15%)
WHITE                   = #fff

GREEN                   = rgb(144, 238, 126)
